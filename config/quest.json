{
  "refresh_interval": 4,
  "time_simulation_duration": 120,
  "time_remaining_format": "%dd %hh %mm %ss",
  "font_family": "Consolas",
  "default_font_size": 8,
  "token_colors": {
    "quest_count": "#ff8000",
    "id": "#ffff00",
    "sector": "#00ff00",
